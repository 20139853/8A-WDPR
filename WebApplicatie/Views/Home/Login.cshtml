@{
    ViewData["Title"] = "Login Page";
}


<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/formulieren.css" />
</head>

<body>

    <h2><b>Inloggen als kind:</b></h2>

    <form method="post" id="form">
        <div class="imgcontainer">
            <img src="/Images/LoginAfbeelding.png" alt="Plaatje van een avatar" class="avatar">
        </div>

        <div class="container">
            <label for="uname"><b>Gebruikersnaam</b></label>
            <input type="text" id="usernameTextfield" placeholder="Voer uw gebruikersnaam in" name="username" required>

            <label for="psw"><b>Wachtwoord</b></label>
            <input type="password" id="passwordTextField" placeholder="Voer uw wachtwoord in" name="wachtwoord"
                required>

            <button onclick="alert('U wordt ingelogd')" id="Maak aan" class="button">Login</button>
        </div>

        <div class="container">
            <a asp-controller="Home" asp-action="Register">Nog geen bestaand account? Klik dan hier om een nieuw account
                aan te maken.</a>
        </div>

        <div class="container">
            <a asp-controller="Home" asp-action="Index">Annuleren</a>
        </div>

    </form>

</body>

</html>

 @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

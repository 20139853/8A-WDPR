@model Ouderlogin

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/formulieren.css" />
    <link rel="stylesheet" href="~/css/footerbottom.css" />
</head>

<body>

    <br><br>
    
    <h2><b>Inloggen met Ouder Gebruikersaccount</b></h2>
    <div class="container">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Oudergebruikersnaam" class="control-label"></label>
                    <input asp-for="Oudergebruikersnaam" class="form-control" />
                    <span asp-validation-for="Oudergebruikersnaam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ouderwachtwoord" class="control-label"></label>
                    <input asp-for="Ouderwachtwoord" class="form-control" />
                    <span asp-validation-for="Ouderwachtwoord" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button id="button" onclick="alert('U wordt ingelogd')" id="Login">Login</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
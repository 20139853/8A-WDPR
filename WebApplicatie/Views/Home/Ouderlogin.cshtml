@model Ouderlogin

@{
    ViewData["Title"] = "Create";
}


<h2>Inloggen met Oudergebruikersaccount</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Oudergebruikersnaam" class="control-label"></label>
                <input asp-for="Oudergebruikersnaam" class="form-control" />
                <span asp-validation-for="Oudergebruikersnaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ouderwachtwoord" class="control-label"></label>
                <input asp-for="Ouderwachtwoord" class="form-control" />
                <span asp-validation-for="Ouderwachtwoord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button onclick="alert('U wordt ingelogd')" id="Login">Login</button>
            </div>
         </form>
     </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
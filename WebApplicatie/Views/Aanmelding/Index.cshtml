@model IEnumerable<Aanmelding>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html lang="nl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/css/formulieren.css" />
    <link rel="stylesheet" href="~/css/overzicht.css" />
    <title>Overzicht afspraken</title>
</head>

<body>

    <h1>Index</h1>

    <form asp-action="Index" asp-controller="Aanmelding" method="get">
        <label for="Naam">Zoek bij naam:</label>
        <input type="text" id="NaamHulpverlener" name="filter" value='@ViewData["Filter"]' />
        <input type="submit" value="Search" />
    </form>

    <br>

    <a asp-action="Create">Maak een nieuwe afspraak</a>
    <hr>

    <br>
    @foreach (var item in Model)
    {
        @if (item.Hulpverlener.Equals("Laura van Veen"))
        {
            <div class="Afspraak" style="background-color:red;">
                <b>Naam: </b>
                @Html.DisplayFor(modelItem => item.VoorNaam)
                @Html.DisplayFor(modelItem => item.AchterNaam)
                <br>
                <b>Datum:</b>
                @Html.DisplayFor(modelItem => item.Datum)
                <br>
                <b>Hulpverlener:</b>
                @Html.DisplayFor(modelItem => item.Hulpverlener)

                <br><br>

                <a asp-action="Delete" asp-route-id="@item.Id">Afspraak afkeuren</a>
                <a asp-action="Edit" asp-route-id="@item.Id">Aanpassen</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </div>

            <br><br>
        }

        else if (item.Hulpverlener.Equals("Dagmar van Parel"))
        {
            <div class="Afspraak" style="background-color:yellow;">
                <b>Naam: </b>
                @Html.DisplayFor(modelItem => item.VoorNaam)
                @Html.DisplayFor(modelItem => item.AchterNaam)
                <br>
                <b>Datum:</b>
                @Html.DisplayFor(modelItem => item.Datum)
                <br>
                <b>Hulpverlener:</b>
                @Html.DisplayFor(modelItem => item.Hulpverlener)

                <br><br>

                <a asp-action="Delete" asp-route-id="@item.Id">Afspraak afkeuren</a>
                <a asp-action="Edit" asp-route-id="@item.Id">Aanpassen</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </div>

            <br><br>
        }

        else if (item.Hulpverlener.Equals("Takezo Jones"))
        {
            <div class="Afspraak" style="background-color:green;">
                <b>Naam: </b>
                @Html.DisplayFor(modelItem => item.VoorNaam)
                @Html.DisplayFor(modelItem => item.AchterNaam)
                <br>
                <b>Datum:</b>
                @Html.DisplayFor(modelItem => item.Datum)
                <br>
                <b>Hulpverlener:</b>
                @Html.DisplayFor(modelItem => item.Hulpverlener)

                <br><br>

                <a asp-action="Delete" asp-route-id="@item.Id">Afspraak afkeuren</a>
                <a asp-action="Edit" asp-route-id="@item.Id">Aanpassen</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </div>

            <br><br>
        }

        else
        {
            <div class="Afspraak" style="background-color:gray;">
                <b>Naam: </b>
                @Html.DisplayFor(modelItem => item.VoorNaam)
                @Html.DisplayFor(modelItem => item.AchterNaam)
                <br>
                <b>Datum:</b>
                @Html.DisplayFor(modelItem => item.Datum)
                <br>
                <b>Hulpverlener:</b>
                @Html.DisplayFor(modelItem => item.Hulpverlener)

                <br><br>

                <a asp-action="Delete" asp-route-id="@item.Id">Afspraak afkeuren</a>
                <a asp-action="Edit" asp-route-id="@item.Id">Aanpassen</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </div>

            <br><br>
        }
    }
</body>

</html>

@using System.Security.Claims
@model Aanmelding
@inject ClientContext _context

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="nl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/zonderinloggen.css" />
    <link rel="stylesheet" href="~/css/footerbottom.css" />
    <link rel="stylesheet" href="~/css/formulieren.css" />
    <title>Intakegesprek inplannen</title>
</head>

<body>

    <h1><b>Intakegesprek Inplannen</b></h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="VoorNaam" id="VoorNaam" class="control-label" style="font-weight: bold;"></label>
                    <input asp-for="VoorNaam" name="Voornaam" class="form-control" />
                    <span asp-validation-for="VoorNaam" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <label asp-for="AchterNaam" id="AchterNaam" class="control-label" style="font-weight: bold;"></label>
                    <input asp-for="AchterNaam" name="Achternaam" class="form-control" />
                    <span asp-validation-for="AchterNaam" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <label asp-for="Datum" id="Datum" class="control-label" style="font-weight: bold;"></label>
                    <input asp-for="Datum" name="Datum" class="form-control" />
                    <span asp-validation-for="Datum" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                <label asp-for="Hulpverlener" id="Hulpverlener" class="control-label" style="font-weight: bold;"></label>
                <br>
                <select name="Hulpverlener" id="Hulpverlener">
                    @foreach (var item in _context.hulpverlener)
                    {
                        <option value="@item.Id">@item.Voornaam</option>
                    }
                </select>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Maak aan" class="button" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="IndexAanmelding">Terug naar de Index pagina</a>
    </div>

    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</body>

</html>
